        }
    ],
    "changelog-sections": [
        {
            "type": "feat",
            "section": "✨ Features"
        },
        {
            "type": "fix",
            "section": "🐛 Bug Fixes"
        },
        {
            "type": "docs",
            "section": "📝 Documentation"
        },
        {
            "type": "style",
            "section": "🎨 Code Style"
        },
        {
            "type": "refactor",
            "section": "♻️ Code Refactoring"
        },
        {
            "type": "perf",
            "section": "⚡ Performance Improvements"
        },
        {
            "type": "test",
            "section": "🧪 Tests"
        },
        {
            "type": "build",
            "section": "👷 Build System"
        },
        {
            "type": "ci",
            "hidden": true
        },
        {
            "type": "chore",
            "section": "🔧 Other Changes"
        },
        {
            "type": "revert",
            "section": "⏪️ Reverts"
